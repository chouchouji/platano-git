{
  "name": "platano-git",
  "version": "0.4.2",
  "description": "A cli for simplifying git operations",
  "type": "module",
  "bin": {
    "platano": "/dist/bin.js"
  },
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rimraf dist && rollup -c",
    "clean": "rimraf node_modules dist",
    "check": "biome check --write --verbose",
    "release": "pnpm build && vr release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chouchouji/platano-git.git"
  },
  "homepage": "https://github.com/chouchouji/platano-git",
  "keywords": [
    "cli",
    "nodejs",
    "git"
  ],
  "files": [
    "dist"
  ],
  "author": "chouchouji <1305974212@qq.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged --allow-empty"
  },
  "nano-staged": {
    "*.js": [
      "biome check --write"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "rattail": "^1.0.13",
    "tinyexec": "^0.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@varlet/release": "^0.3.1",
    "nano-staged": "^0.8.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.0",
    "simple-git-hooks": "^2.11.1",
    "tslib": "^2.8.1",
    "typescript": "5.3.3"
  }
}