{
  "name": "platano-git",
  "version": "0.1.2",
  "description": "a tool for simplifying git operations",
  "main": "index.js",
  "type": "commonjs",
  "bin": {
    "platano": "/src/bin.js"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint --fix \"src/**/*.js\""
  },
  "simple-git-hooks": {
    "pre-commit": "npm exec lint-staged --allow-empty --concurrent false"
  },
  "lint-staged": {
    "*.js": ["npm run lint", "npm run format"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chouchouji/platano-git"
  },
  "homepage": "https://github.com/chouchouji/platano-git",
  "keywords": [
    "cli",
    "nodejs",
    "git"
  ],
  "author": "chouchouji",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "inquirer": "^8.1.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.1"
  }
}
